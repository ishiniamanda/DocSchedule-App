<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Image upload area -->
    <ImageView
        android:id="@+id/ivRecordImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_image_placeholder"
        android:src="@drawable/ic_baseline_add_image_24"
        android:layout_marginTop="60dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add image"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivRecordImage"
        app:layout_constraintStart_toStartOf="@id/ivRecordImage"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"/>

    <!-- Title -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Record title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Record type"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="User"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSaveRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save record"
        android:layout_marginTop="24dp"
        android:background="@drawable/purple_bg"
        app:layout_constraintTop_toBottomOf="@id/etUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
